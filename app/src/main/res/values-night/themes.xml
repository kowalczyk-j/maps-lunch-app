<resources>
    <!-- Base application theme. -->
    <style name="Theme.BulionApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/navbar_gray</item>
        <!-- Kolor tekstu na tle primary -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Kolor tekstu na tle secondary -->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Kolor tła dla obszaru głównego -->
        <item name="android:windowBackground">@color/dark_gray</item>
    </style>
</resources>

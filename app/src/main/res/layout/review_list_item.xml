<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/restaurantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aioli"
            android:layout_marginStart="25dp"
            android:layout_marginVertical="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginVertical="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reviewBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="@dimen/cast_libraries_material_featurehighlight_center_horizontal_offset"
                android:text="Bardzo smaczne jedzenie, świetna atmosfera! Na pewno będę wracać :)Bardzo smaczne jedzenie, świetna atmosfera! Na pewno będę wracać :)Bardzo smaczne jedzenie, świetna atmosfera! Na pewno będę wracać :)"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>